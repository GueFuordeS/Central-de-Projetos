package pessoaTest;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import excecoes.ValidacaoException;
import pessoa.PessoaController;

public class PessoaControllerTest {
	PessoaController pessoas;
	
	@Before
	public void setUp() throws Exception {
		pessoas = new PessoaController();
		pessoas.addPessoa("222.333.444-55","Natasha","natasha@ccc.ufcg.edu.br");
	}

	@Test
	public void test() throws ValidacaoException {
		pessoas.addPessoa("222.333.444-55","Naty","naty@ccc.ufcg.edu.br");
		System.out.println(pessoas.listarPessoas());
	}

}
